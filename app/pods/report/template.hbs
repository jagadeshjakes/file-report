<div class="row">
<div class="col-5">
<select class="form-control form-control-sm" onchange={{action "setXAxis" value="target.value"}}>
  <option value="no" selected>--X-Axis--</option>
{{#each model.columns as |column|}}
		<option value={{column}}>{{column}}</option>
{{/each}}
</select>
</div>
<div class="col-5">
<select class="form-control form-control-sm" onchange={{action "setYAxis" value="target.value"}}>
  <option value="no" selected>--Y-Axis--</option>
{{#each model.columns as |column|}}
		<option value={{column}}>{{column}}</option>
{{/each}}
</select>
</div>
<button class='btn btn-info btn-sm'{{action 'showTable'}}>Show table</button>
</div>

{{#if viewMatrix}}
<button class="btn btn-sm" {{action 'hideTable'}}>cancel</button>
<table class="table">
  {{#each matrixData.rowData as |row i|}}
    <tr>
      {{#each row as |col j|}}
      <td onclick={{action 'getvertex' i j}}>{{col}}</td>
      {{/each}}
    </tr>
  {{/each}}
</table>
{{/if}}

<div class="modal hide" id="mymodal">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

</div>
